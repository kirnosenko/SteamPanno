<Project Sdk="Godot.NET.Sdk/4.4.1">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <EnableDynamicLoading>true</EnableDynamicLoading>
	<Platforms>AnyCPU</Platforms>
  </PropertyGroup>
  <ItemGroup Condition=" '$(GodotTargetPlatform)' == 'windows' ">
    <Reference Include="Facepunch.Steamworks.Win64">
      <HintPath>addons\steam\windows\Facepunch.Steamworks.Win64.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup Condition=" '$(GodotTargetPlatform)' == 'macos' ">
    <Reference Include="Facepunch.Steamworks.Posix">
      <HintPath>addons\steam\macos\Facepunch.Steamworks.Posix.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup Condition=" '$(GodotTargetPlatform)' == 'linuxbsd' ">
    <Reference Include="Facepunch.Steamworks.Posix">
      <HintPath>addons\steam\linux\Facepunch.Steamworks.Posix.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="SixLabors.ImageSharp" Version="3.1.11" />
  </ItemGroup>
  <Target Condition=" '$(GodotTargetPlatform)' == 'windows' " Name="PostBuildWindows" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /Y &quot;$(GodotProjectDir)addons\steam\windows\steam_api64.dll&quot; &quot;$(GodotProjectDir)&quot;" />
  </Target>
  <Target Condition=" '$(GodotTargetPlatform)' == 'macos' " Name="PostBuildMacos" AfterTargets="PostBuildEvent">
    <Exec Command="rsync -av &quot;$(GodotProjectDir)addons\steam\macos\libsteam_api.dylib&quot; &quot;$(GodotProjectDir)&quot;" />
  </Target>
  <Target Condition=" '$(GodotTargetPlatform)' == 'linuxbsd' " Name="PostBuildLinux" AfterTargets="PostBuildEvent">
    <Exec Command="rsync -av &quot;$(GodotProjectDir)addons\steam\linux\libsteam_api.so&quot; &quot;$(GodotProjectDir)&quot;" />
  </Target>
</Project>